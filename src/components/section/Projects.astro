---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---
<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a
                    href={url === "_" ? null : url}
                    title={`Ver el proyecto ${name}`}
                    target="_blank"
                  >
                    {name}
                  </a>
                  {isActive && <span>&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((high) => {
                  return <span>{high}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.7rem;
  }
  li {
    transition: all 0.2s ease-in-out;
  }
  li:hover {
    border-radius: 10px;
    transform: scale(1.01);
    box-shadow: 0 5px 10px rgb(0, 0, 0, 0.2);
  }
  article {
    border-radius: 10px;
    border: 1px solid #f2f2f2;
    gap: 15px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }
  article header {
    flex: 1;
  }
  article h3 {
    margin-bottom: 4px;
  }
  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }
  article p {
    font-size: 0.8rem;
    line-height: 1.2rem;
    margin-bottom: 7px;
  }
  article h3 span {
    color: #00eeff;
  }
  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
  }
  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-flex;
    border: 0.8px solid #f1f1f1;
  }
</style>
